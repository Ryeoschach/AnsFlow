# AnsFlow 生产环境配置

# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_mysql_password_here

# Django 配置
DJANGO_SECRET_KEY=your_very_long_and_secure_secret_key_here
ALLOWED_HOSTS=your-domain.com,api.your-domain.com,localhost

# RabbitMQ 配置
RABBITMQ_USER=ansflow_prod
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here

# Redis 配置 (可选)
REDIS_PASSWORD=your_redis_password_here

# SSL 证书配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 邮件配置
EMAIL_HOST=smtp.your-domain.com
EMAIL_HOST_USER=noreply@your-domain.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_PORT=587
EMAIL_USE_TLS=true

# 监控配置
MONITORING_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn-here

# 部署选项
CREATE_SUPERUSER=true
CLEAN_DATA=false  # 警告: 设为true会清理所有数据

# 域名配置
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com
WEBHOOK_URL=https://webhook.your-domain.com
