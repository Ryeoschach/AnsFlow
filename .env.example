# Development Environment Variables
# Copy this file to .env and update the values as needed

# ===========================================
# Django Service Configuration
# ===========================================
DJANGO_SECRET_KEY=your-super-secret-django-key-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===========================================
# FastAPI Service Configuration  
# ===========================================
FASTAPI_SECRET_KEY=your-super-secret-fastapi-key-change-this-in-production
FASTAPI_DEBUG=True

# ===========================================
# Database Configuration
# ===========================================
DB_ENGINE=mysql
DB_NAME=ansflow_db
DB_USER=ansflow_user
DB_PASSWORD=ansflow_password_123
DB_HOST=mysql
DB_PORT=3306

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=ansflow
RABBITMQ_PASSWORD=ansflow_rabbitmq_123
RABBITMQ_VHOST=/

# ===========================================
# Frontend Configuration
# ===========================================
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_FASTAPI_BASE_URL=http://localhost:8001
REACT_APP_WS_BASE_URL=ws://localhost:8001

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Email Configuration (Optional)
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# External Service Integration
# ===========================================
# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitLab
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# Jenkins
JENKINS_URL=http://your-jenkins-instance
JENKINS_USERNAME=your-jenkins-user
JENKINS_PASSWORD=your-jenkins-token

# ===========================================
# Monitoring Configuration
# ===========================================
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
GRAFANA_HOST=grafana
GRAFANA_PORT=3001

# ===========================================
# Security Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# ===========================================
# File Storage Configuration
# ===========================================
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Performance Configuration
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_WORKER_CONCURRENCY=4

# ===========================================
# Development Tools
# ===========================================
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SILK_PROFILING=False
